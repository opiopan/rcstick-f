flash: check_remote all
	@expect -c \
"spawn arm-none-eabi-gdb $(BUILD_DIR)/$(TARGET).elf;"\
"expect \"(gdb)\";"\
"send -- \"target remote $(DEBUGSERVER):3333\n\";"\
"expect \"(gdb)\";"\
"send -- \"load\n\";"\
"expect \"(gdb)\";"\
"send -- \"mon rtt stop \n\";"\
"expect \"(gdb)\";"\
"send -- \"eval \\\"mon rtt setup %p 512 SEGGER\\\\\\\\ RTT\\\", &_SEGGER_RTT\n\";"\
"expect \"(gdb)\";"\
"send -- \"mon rtt start \n\";"\
"expect \"(gdb)\";"\
"send -- \"mon reset run\n\";"\
"expect \"(gdb)\";"\
"send -- \"detach\n\";"\
"expect \"(gdb)\";"\
"send -- \"quit\n\";" || exit 1
	@echo

